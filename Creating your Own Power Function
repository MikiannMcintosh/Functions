#include <iostream>
using namespace std;

double power(double base, double exponent) {
    // Base^Exponent
    // 6^3
    double result = 1;
    for (int i = 0; i < exponent; i++) {
        result *= base;
    }
    return result;
}

// Main Function
int main() {
    double base = 2;
    double exponent = 2;
    double result;

    result = power(base, exponent);

    cout << "The base 2 to the power 2 is : " << result << endl;

    cout << "Base is : " << base << endl;
    cout << "Exponent is : " << exponent << endl;
}
